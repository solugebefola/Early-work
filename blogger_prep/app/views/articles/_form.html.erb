<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><% error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list, 'Tags' %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>Attached images:<br />
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium) %><br />
    <% else %>
      <h2>None</h2>
    <% end %>

    <%= f.label :image, "Attach a new image" %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>