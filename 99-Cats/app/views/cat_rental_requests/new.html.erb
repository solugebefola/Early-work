<h1>RENT A CAT!!!!</h1>

<form action="<%= cat_rental_requests_url %> " method="POST">
  <%= auth_token %>

  <label>Cat Name
    <select name="cat_rental_request[cat_id]" ><br>
      <option value=""></option>
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"> <%= cat.name %> </option>
      <% end %>
    </select>
  </label>

  <br><br>

  <label>Start Date
    <input
      type="date"
      name="cat_rental_request[start_date]"
      value="<%= @cat_rental_request.start_date %>">
  </label>

  <br>

  <label>End Date
  <input
    type="date"
    name="cat_rental_request[end_date]"
    value="<%= @cat_rental_request.end_date %>">
  </label>

  <br><br>

  <button>"Submit rental request"</button>
</form>
