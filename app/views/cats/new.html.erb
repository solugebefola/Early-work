<h1>Create a cat(whee!)</h1>
<form action="<%= cats_url  %>" method="post">
  <label for="Cat's Name">Cat's Name</label>
  <input type="text" name="cat[name]">
  <br><br>
  <label for="Cat's Birthday">Cat's Birthday</label>
  <input type="date" name="cat[birth_date]">
  <br><br>
  <label for="Cat's Sex">Male or Female?</label>
  <br>
  <input type="radio" name="cat[sex]" id="cat_sex_female" value="F">
  <label for="cat_sex_female">Female</label>
  <input type="radio" name="cat[sex]" id="cat_sex_male" value="M">
  <label for="cat_sex_male">Male</label>
  <br><br>
  <label for="Cat's Color">Cat's Color</label>
  <select name="cat[color]" id="cat_coat_color">
    <option value="brown">Brown</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="calico">Calico</option>
    <option value="orange">Orange</option>
  </select>
  <br><br>
  <label for="Cat's Description">Describe your Cat</label>
  <input type="textarea" name="cat[description]"></textarea>
  <br> <br>
  <input type="submit" value="Create cat">
