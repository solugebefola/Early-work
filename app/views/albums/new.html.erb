<h1>Add an Album</h1>

<form action="<%= albums_url %>" method="post">
  <%= auth_token %>

  <label for="band_id">Album artist
    <select
      name="band[id]"
      id="band_id">
      <option></option>
      <% @bands.each do |band|%>
      <option value="<%= band.id %>"
        <%= band.id == @album.band_id ? "selected" : ""%> ><%= band.name %></option>
      <% end %>
    </select><br><br>
  </label>

  <label for="live">Live performance
    <input
      type="radio"
      name="band[live_or_studio]"
      id="live"
      value="L">
  </label><br>

  <label for="studio">Studio performance
    <input
    <input
      type="radio"
      name="band[live_or_studio]"
      id="studio"
      value="S">
  </label><br>

  <input type="submit" value="add album">
</form>
