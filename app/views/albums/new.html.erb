<h1>Add an Album</h1>

<form action="<%= albums_url %>" method="post">
  <%= auth_token %>

  <label for="band_id">Album artist
    <input
      type="selection"
      name="band[id]"
      id="band_id">
      <option></option>
      <% @bands.each do |band|%>
      <option value="<%= band.id %>"
        <%= "selected" if band.id == album.band_id %>>
        <% band.name %>
      </option>
  </label>

  <label for="band_live">Live performance
    <input
      type="radio"
      name="band_live"
      value="L">
  </label>

  <label for="band_studio">Studio performance
    <input
    <input
      type="radio"
      name="band_studio"
